---

<section id="experience" class="py-20 bg-gray-800/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        <span class="bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent">
          Experience
        </span>
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-indigo-400 to-purple-400 mx-auto mb-8"></div>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-7xl mx-auto">
      {experiences.map(exp => (
        <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-indigo-500/50 transition-all duration-300">
          <div class="flex justify-between items-start mb-4">
            <div class="flex-1">
              <h3 class="text-xl font-bold text-indigo-400 mb-1">{exp.position}</h3>
              <p class="text-lg text-gray-300 mb-1">{exp.company}</p>
              <p class="text-sm text-gray-400 mb-2">{exp.location}</p>
            </div>
            <span class="bg-indigo-600/20 text-indigo-300 px-3 py-1 rounded-full text-xs font-medium whitespace-nowrap ml-4">
              {exp.duration}
            </span>
          </div>
          
          <p class="text-gray-300 mb-4 text-sm leading-relaxed">{exp.description}</p>
          
          <div>
            <h4 class="text-sm font-semibold mb-2 text-indigo-400">Key Highlights:</h4>
            <div class="space-y-1">
              {exp.achievements.map(achievement => (
                <div class="flex items-start">
                  <span class="text-indigo-400 mr-2 text-xs mt-1">â–¸</span>
                  <span class="text-gray-300 text-xs leading-relaxed">{achievement}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
